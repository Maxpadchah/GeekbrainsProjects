<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/paper_texture_invoiced_gray_color"
    android:orientation="vertical"
    android:visibility="visible"
    tools:context=".MainActivity"
    tools:ignore="ExtraText">

    <!-- Поле ввода -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_margin="6dp"
        android:layout_weight="0.5"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_console"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center"
            android:text=""
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="34sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Поле кнопок С, (), %, / -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center|bottom"
        android:layout_margin="6dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_C"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/button_indent"
            android:layout_weight="1"
            android:backgroundTint="@color/grey"
            android:text="@string/button_C"
            android:textColor="@color/red"
            android:textSize="@dimen/text_size_horisontal" />

        <Button
            android:id="@+id/button_bracket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/button_indent"
            android:layout_weight="1"
            android:backgroundTint="@color/grey"
            android:text="@string/button_bracket"
            android:textColor="@color/green"
            android:textSize="@dimen/text_size_horisontal" />

        <Button
            android:id="@+id/button_percent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/button_indent"
            android:layout_weight="1"
            android:backgroundTint="@color/grey"
            android:text="@string/button_percent"
            android:textColor="@color/green"
            android:textSize="@dimen/text_size_horisontal" />

        <Button
            android:id="@+id/button_del"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/grey"
            android:text="@string/button_del"
            android:textColor="@color/green"
            android:textSize="@dimen/text_size_horisontal" />
    </LinearLayout>

    <!-- Поле кнопок 7, 8, 9, * -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center|bottom"
        android:layout_margin="6dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/button_indent"
            android:layout_weight="1"
            android:backgroundTint="@color/grey"
            android:text="@string/button_7"
            android:textSize="@dimen/text_size_horisontal" />

        <Button
            android:id="@+id/button_8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/button_indent"
            android:layout_weight="1"
            android:backgroundTint="@color/grey"
            android:text="@string/button_8"
            android:textSize="@dimen/text_size_horisontal" />

        <Button
            android:id="@+id/button_9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/button_indent"
            android:layout_weight="1"
            android:backgroundTint="@color/grey"
            android:text="@string/button_9"
            android:textSize="@dimen/text_size_horisontal" />

        <Button
            android:id="@+id/button_mul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/grey"
            android:text="@string/button_mul"
            android:textColor="@color/green"
            android:textSize="@dimen/text_size_horisontal" />
    </LinearLayout>

    <!-- Поле кнопок 4, 5, 6, - -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center|bottom"
        android:layout_margin="6dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/button_indent"
            android:layout_weight="1"
            android:backgroundTint="@color/grey"
            android:text="@string/button_4"
            android:textSize="@dimen/text_size_horisontal" />

        <Button
            android:id="@+id/button_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/button_indent"
            android:layout_weight="1"
            android:backgroundTint="@color/grey"
            android:text="@string/button_5"
            android:textSize="@dimen/text_size_horisontal" />

        <Button
            android:id="@+id/button_6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/button_indent"
            android:layout_weight="1"
            android:backgroundTint="@color/grey"
            android:text="@string/button_6"
            android:textSize="@dimen/text_size_horisontal" />

        <Button
            android:id="@+id/button_min"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/grey"
            android:text="@string/button_min"
            android:textColor="@color/green"
            android:textSize="@dimen/text_size_horisontal" />
    </LinearLayout>

    <!-- Поле кнопок 1, 2, 3, + -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center|bottom"
        android:layout_margin="6dp"
        android:layout_weight="1"
        android:orientation="horizontal">>

        <Button
            android:id="@+id/button_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/button_indent"
            android:layout_weight="1"
            android:backgroundTint="@color/grey"
            android:text="@string/button_1"
            android:textSize="@dimen/text_size_horisontal" />

        <Button
            android:id="@+id/button_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/button_indent"
            android:layout_weight="1"
            android:backgroundTint="@color/grey"
            android:text="@string/button_2"
            android:textSize="@dimen/text_size_horisontal" />

        <Button
            android:id="@+id/button_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/button_indent"
            android:layout_weight="1"
            android:backgroundTint="@color/grey"
            android:text="@string/button_3"
            android:textSize="@dimen/text_size_horisontal" />

        <Button
            android:id="@+id/button_plus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/grey"
            android:text="@string/button_plus"
            android:textColor="@color/green"
            android:textSize="@dimen/text_size_horisontal" />
    </LinearLayout>

    <!-- Поле кнопок +/-, 0, , =  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center|bottom"
        android:layout_margin="6dp"
        android:layout_weight="1"
        android:orientation="horizontal">>

        <Button
            android:id="@+id/button_char"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/button_indent"
            android:layout_weight="1"
            android:backgroundTint="@color/grey"
            android:text="@string/button_char"
            android:textSize="@dimen/text_size_horisontal" />

        <Button
            android:id="@+id/button_0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/button_indent"
            android:layout_weight="1"
            android:backgroundTint="@color/grey"
            android:text="@string/button_0"
            android:textSize="@dimen/text_size_horisontal" />

        <Button
            android:id="@+id/button_dot"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/button_indent"
            android:layout_weight="1"
            android:backgroundTint="@color/grey"
            android:text="@string/button_dot"
            android:textSize="@dimen/text_size_horisontal" />

        <Button
            android:id="@+id/button_equally"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/green"
            android:text="@string/button_equally"
            android:textSize="@dimen/text_size_horisontal" />
    </LinearLayout>
</LinearLayout>