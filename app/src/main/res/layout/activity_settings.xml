<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/paper_texture_invoiced_gray_color"
    tools:context=".Settings">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top|center"
        android:orientation="horizontal"
        android:text="@string/tv_settings_1"
        android:textColor="@color/black"
        android:textSize="@dimen/size_settings_text"
        android:textStyle="bold" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="@dimen/size_margin_settings"
        android:layout_marginLeft="@dimen/size_settings"
        android:layout_marginRight="@dimen/size_settings"
        android:columnCount="2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_settings_2"
            android:textColor="@color/black"
            android:textSize="@dimen/size_settings_text"
            android:textStyle="bold" />

        <Switch
            android:id="@+id/switch_them"
            android:layout_height="wrap_content"
            android:layout_gravity="right" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttons_back"
            android:backgroundTint="@color/grey"
            android:text="Назад"
            android:textColor="@color/black"
            android:textStyle="bold" />
    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>